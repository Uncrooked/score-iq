datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model question {
  id                     Int    @id @default(autoincrement())
  type_id                Int
  content_text           String?
  content_img_id         Int?
  content_upload_type_id Int?
  
  content_img          img?        @relation(fields: [content_img_id], references: [id])
  content_upload_type  upload_type? @relation(fields: [content_upload_type_id], references: [id])
  answers               answer[]
  
  @@map("question")
}

model img {
  id     Int    @id @default(autoincrement())
  src    String
  width  Int?
  height Int?
  alt    String?
  
  questions question[]
  
  @@map("img")
}

model upload_type {
  id        Int    @id @default(autoincrement())
  mime_type String
  
  questions question[]
  
  @@map("upload_type")
}

model answer {
  id         Int    @id @default(autoincrement())
  question_id Int
  content    String
  
  question   question @relation(fields: [question_id], references: [id])
  
  @@map("answer")
}