datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model question {
  id                     Int    @id @default(autoincrement())
  type_id                Int
  content_text           String?
  content_img_id         Int?
  content_upload_type_id Int?
  
  img                 img?        @relation(fields: [content_img_id], references: [id])
  upload_type         upload_type? @relation(fields: [content_upload_type_id], references: [id])
  answer              answer[]
  question_type       question_type? @relation(fields: [type_id], references: [id])
}

model img {
  id     Int    @id @default(autoincrement())
  src    String
  width  Int?
  height Int?
  alt    String?
  
  questions question[]
}

model upload_type {
  id        Int    @id @default(autoincrement())
  mime_type String

  questions question[]
}

model answer {
  id         Int    @id @default(autoincrement())
  question_id Int
  content    String
  valid      Boolean?
  
  question   question @relation(fields: [question_id], references: [id])
}

model question_type {
  id    Int     @id   @default(autoincrement())
  type  String

  questions question[]
}